    <script>
        // DOM Elements
        const landingSection = document.getElementById('landing-section');
        const shareSection = document.getElementById('share-section');
        const mobileInput = document.getElementById('mobileInput');
        const claimBtn = document.getElementById('claimBtn');
        const errorMsg = document.getElementById('errorMsg');
        const loader = document.getElementById('loading');
        const whatsappBtn = document.getElementById('whatsappBtn');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const finalClaimBtn = document.getElementById('finalClaimBtn');

        // State
        let progress = 0;
        const maxProgress = 100;
        const increment = 20; // 5 clicks to 100%

        // Input Validation & Transition
        claimBtn.addEventListener('click', () => {
            const number = mobileInput.value;
            const regex = /^[6-9]\d{9}$/; // Simple Indian mobile regex

            if (!regex.test(number)) {
                errorMsg.style.display = 'block';
                mobileInput.style.borderColor = '#dc3545';
                return;
            }

            // Valid input
            errorMsg.style.display = 'none';
            mobileInput.style.borderColor = '#28a745';
            claimBtn.style.display = 'none';
            loader.style.display = 'block';

            // Simulate Network Delay
            setTimeout(() => {
                landingSection.classList.add('hidden');
                shareSection.classList.remove('hidden');
                shareSection.classList.add('fade-in');
            }, 1500);
        });

        // Input focus reset
        mobileInput.addEventListener('input', () => {
            errorMsg.style.display = 'none';
            mobileInput.style.borderColor = '#e1e4e8';
        });

        // Sharing Logic
        whatsappBtn.addEventListener('click', () => {
            // Simulate WhatsApp URL
            const message = encodeURIComponent(`üéâ I just got ‚Çπ599 FREE Recharge for Jio/Airtel/BSNL! üéÅ\n\nClaim yours too before the offer ends! üëá\n\nhttp://www.free-recharge-offer-2026.com`);
            const waUrl = `https://wa.me/?text=${message}`;
            
            // Try to open WhatsApp
            window.open(waUrl, '_blank');

            // Update Progress Logic
            if (progress < maxProgress) {
                progress += increment;
                
                // Cap at 100
                if (progress > maxProgress) progress = maxProgress;

                // Update UI
                progressBar.style.width = `${progress}%`;
                progressText.innerText = `Progress: ${progress}%`;

                // Check Completion
                if (progress === maxProgress) {
                    setTimeout(() => {
                        whatsappBtn.style.display = 'none';
                        finalClaimBtn.style.display = 'block';
                        progressText.innerText = "Verification Complete! ‚úÖ";
                        progressText.style.color = "#28a745";
                    }, 600);
                }
            }
        });

        // Final Claim Action
        finalClaimBtn.addEventListener('click', () => {
            alert("Thank you! Your ‚Çπ599 recharge is under processing.\n\nIt will reflect in your account within 24-48 hours.");
        });

    </script>
